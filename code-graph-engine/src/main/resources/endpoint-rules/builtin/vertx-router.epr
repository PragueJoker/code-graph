name: "Vert.x Router"
description: "解析 Vert.x Router 的 HTTP 路由定义"
version: "1.0"
enabled: true
priority: 95
type: "http-inbound"

scope:
  packageIncludes:
    - "**"

locate:
  nodeType: "MethodInvocation"
  where:
    - receiver:
        typeMatches: ".*Router$"
    - methodName:
        in: ["get", "post", "put", "delete", "patch", "route"]

extract:
  httpMethod:
    from: "methodName"
    transform: "toUpperCase"
  
  path:
    from: "argument[0]"
    trace: "auto"

